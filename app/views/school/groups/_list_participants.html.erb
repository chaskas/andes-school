<% content_for :title, "Participants in Group" %>

<% unless @group.participants.count > 0 %>
  <p class="text-center">
    No participants found for this group.
  </p>
<% else %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">Name</th>
        <th scope="col" class="text-center">Email</th>
        <th scope="col" class="text-center">Birthday</th>
        <th scope="col" class="text-center">Options</th>
      </tr>
    </thead>
    <tbody>

      <% @group.participants.each do |participant| %>
        <tr>
          <td class="text-center"><%= participant.name %></td>
          <td class="text-center"><%= participant.email %></td>
          <td class="text-center"><%= participant.birthday&.to_fs(:day_month_year) %></td>
          <td class="text-center">
            <div class="d-inline-flex">
              <%= button_to "", group_participant_path(@group, participant), method: :delete, class: "btn btn-sm btn-danger bi bi-trash" %>
            </div>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
<% end %>
