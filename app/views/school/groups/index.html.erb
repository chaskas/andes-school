<% unless notice.blank? %>
  <div class="alert alert-success mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "groups" %>

<div class="d-flex align-items-center ">
  <h1>Groups</h1>
  <%= button_to "", new_group_path, method: :get, class: "btn btn-sm btn-primary bi bi-plus ms-2 fs-4" %>
</div>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Description</th>
    <th scope="col">Options</th>
  </tr>
  </thead>
  <tbody>

    <% @groups.each do |group| %>
      <tr>

        <td><%= group.name %></td>
        <td><%= group.description %></td>

        <td>
          <div class="d-inline-flex">
            <%= button_to "", edit_group_path(group), method: :get, class: "btn btn-sm btn-success bi bi-pencil me-1" %>
            <%= button_to "", group_path(group), method: :get, class: "btn btn-sm btn-warning bi bi-eye me-1" %>
            <%= button_to "", group, method: :delete, class: "btn btn-sm btn-danger bi bi-trash" %>
          </div>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>
