<%= turbo_frame_tag dom_id(session_record) do %>
  <div class="card mb-2">
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <h6 class="mb-0">
          <% if session_record.persisted? and session_record.attributes['start_time'].present? %>
            <%= session_record.start_time.strftime("%d.%m.%Y - %H:%M") %>
          <% else %>
            Time not set
          <% end %>
          <span class="badge bg-info ms-2"><%= pluralize(session_record.duration, 'minute') %></span>
        </h6>
      </div>
      <div>
        <% if session_record.persisted? %>
          <%= button_to session_detail_session_record_path(session_record.session_detail, session_record),
                      method: :delete,
                      class: "btn btn-sm btn-danger bi bi-trash",
                      form: { data: { turbo_stream: true } } do %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
