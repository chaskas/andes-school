
<% unless notice.blank? %>
  <div class="alert alert-success mt-3" role="alert">
    <%= notice %>
  </div>
<% end %>

<div class="card mt-4">
  <div class="card-body">
    <h4 class="card-title text-sm display-4 fw-bold"><%= @facilitator.name %></h4>

    <p class="card-text"><strong>Email:</strong> <%= @facilitator.email %></p>
    <p class="card-text"><strong>Birthday:</strong> <%= @facilitator.birthday.strftime("%d/%m/%Y") if @facilitator.birthday %></p>

    <div class="d-flex justify-content-end mt-3">
      <%= button_to " Edit", edit_facilitator_path(@facilitator), method: :get, class: "btn btn-primary me-2 bi bi-pencil me-1" %>
      <%= button_to " Delete", @facilitator, method: :delete, class: "btn btn-danger bi bi-trash me-2" %>
      <%= button_to " Return", facilitators_path, method: :get, class: "btn btn-dark bi bi-arrow-return-left me-2" %>
    </div>
  </div>
   
