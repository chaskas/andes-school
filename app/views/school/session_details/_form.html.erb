<%= form_with(model: session_detail, local: true) do |form| %>
  <% if @session_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@session_detail.errors.count, "error") %> prohibited this session detail from being saved:</h2>
      <ul>
        <% @session_detail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :targetable_type, "Targetable Type" %>
    <%= form.select :targetable_type, options_for_select([['Individual', 'School::Participant'], ['Group', 'School::Group']], nil), { include_blank: true }, id: 'targetable-type-select', class: 'form-control' %>
  </div>

  <div class="row mb-3 justify-content-md-left">
    <div class="col">
      <%= form.label :targetable_id, "Participant", class: "form-label fw-bold" %>
      <%= form.select :targetable_id, options_for_select(@participants.map { |participant| [participant.name, participant.id] }, nil), { include_blank: true }, class: "form-select" %>
    </div>
  </div>

  <div class="row mb-3 justify-content-md-left">
    <div class="col">
      <%= form.label :targetable_id, "Group", class: "form-label fw-bold" %>
      <%= form.select :targetable_id, options_for_select(@groups.map { |group| [group.name, group.id] }, nil), { include_blank: true }, class: "form-select" %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit class: 'btn btn-primary mt-3' %>
  </div>
<% end %>